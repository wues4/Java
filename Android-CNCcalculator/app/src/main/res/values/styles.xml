<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">#D7CCC8</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Buttons styles -->
    <style name="ButtonNumberPad" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/button_num_pad</item>
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ButtonOperation" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@drawable/button_num_pad</item>
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ButtonOperationClear" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:background">@drawable/button_num_pad</item>
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ButtonOperationSum" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_sum</item>
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- TextView styles -->
    <style name="TextViewDisplay">
        <item name="android:textSize">56sp</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="ScrollViewDisplay">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>


</resources>
